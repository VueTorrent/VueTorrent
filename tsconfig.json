{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": [
    "vite.config.ts",
    "typed-router.d.ts",
    "*.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "coverage",
    "vuetorrent",
    "**/*.spec.js",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "vite/client",
      "vuetify",
      "vite-plugin-pwa/client",
      "@types/webfontloader"
    ],
    "lib": [
      "dom",
      "esnext"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.vitest.json"
    }
  ]
}
