{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": [
    "vite.config.ts",
    "typed-router.d.ts",
    "*.d.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": ["src/**.spec.ts"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom", "WebWorker"],
    "types": ["vuetify", "vite-plugin-pwa/client", "@types/webfontloader"],
    "sourceMap": true,
    "strict": true
  },
  "references": [
    {
      "path": "./tsconfig.vitest.json"
    }
  ]
}
